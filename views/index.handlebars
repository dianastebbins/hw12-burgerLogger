<div class="container-fluid">
  <div class="row">
    <div class="col-12">
      <h1>Eat Da Burgers!</h1>
    </div>
  </div>

  <div class="row">
    <div class="col-4">
      <h2>Available Burgers</h2>

      <ul>
        {{#each burgers}}
        {{#unless devoured}}
        <li>
          {{burger_name}}
          <button class="change-devour" data-id="{{id}}" data-newdevour="true">
            Devour It!
          </button>
        </li>
        {{/unless}}
        {{/each}}
      </ul>
    </div>

    <div class="col-4">
      <div class="row">
        <div class="col-12" id="burger_picture">
          <img src="{{pic_path}}" alt="Burger picture" height="{{pic_height}}" width="{{pic_width}}">
        </div>
      </div>
      <div class="row">
        <div class="col-12">
          <h2>Add a Burger</h2>

          <form class="create-form">
            <div class="form-group">
              <label for="addBurger">Burger Name:</label>
              <input type="text" id="addBurger" name="burger_name">

              <button type="submit">Add Burger</button>
            </div>
          </form>
        </div>
      </div>
    </div>

    <div class="col-4">
      <h2>Already Devoured</h2>

      <ul>
        {{#each burgers}}
        {{#if devoured}}
        <li>
          {{burger_name}}
        </li>
        {{/if}}
        {{/each}}
      </ul>
    </div>
  </div>
</div>